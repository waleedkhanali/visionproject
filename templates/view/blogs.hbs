   <script>
    var selectedElem = "";
    function addHeading(){
        var added_files = document.getElementById("added_files");
        var Heading = document.createElement("h1");
        Heading.innerHTML = "heading";
        Heading.contentEditable = "true";
        selectedElem = Heading;
        Heading.addEventListener("click",showProperties);
        added_files.appendChild(Heading);
    }
    function addPara(){
            var added_files = document.getElementById("added_files");
        var para = document.createElement("para");
        para.innerHTML = "paragraph";
        para.contentEditable = "true";
        selectedElem = para;
        para.addEventListener("click",showProperties);
        added_files.appendChild(para);  
    }
    function showProperties(){
        var properties = document.getElementById("properties");
        properties.style.opacity = 1;
    }
    function cng_color(elem){
        console.log(selectedElem)
        selectedElem.style.color = elem.value; 
    }
        function change_font(elem){
        console.log(selectedElem)
        selectedElem.style.fontSize = elem.value+"px"; 
    }
    function deleteItem(){
        selectedElem.remove();
    }
